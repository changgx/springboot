<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.changgx.mapper.UserInfoMapper">
    <select id="findByUsernameAndPassword" resultType="com.changgx.bean.UserInfo" parameterType="HashMap">
       SELECT * from userinfo WHERE username=#{0} and password=#{1}
    </select>
    <insert id="insert"  parameterType="com.changgx.bean.UserInfo">
       INSERT INTO userinfo(username,password,createtime,updatetime) VALUES
       (#{username},#{password},#{createTime},#{updateTime})
    </insert>

</mapper>
